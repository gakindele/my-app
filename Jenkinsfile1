node{
    stage('SCM Checkout'){ 
      git 'https://github.com/gakindele/my-app'
    }
    stage('Compile-Package'){
       //get maven home path
        def mvnHome = tool name: 'maven-3', type: 'maven'
        sh "${mvnHome}/bin/mvn package"
    }
    
    stage ('Email Notification'){
       mail bcc: '', body: '''This is Jenkins email alert!!!
       Be warned!!!''', cc: '', from: '', replyTo: '', subject: 'Jenkins job', to: 'gakindele05@yahoo.com'
    }
}
